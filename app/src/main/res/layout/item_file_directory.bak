<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- File/Folder Icon -->
    <TextView
        android:id="@+id/fileIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:text="📁"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginEnd="12dp" />

    <!-- File Info Container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- File Name -->
        <TextView
            android:id="@+id/fileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="File Name"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- File Size/Details -->
        <TextView
            android:id="@+id/fileDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Size • Modified"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="?android:attr/textColorSecondary"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- Replica Status Container -->
    <LinearLayout
        android:id="@+id/replicaStatusContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        android:visibility="gone">

        <!-- Replica Count Badge -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/replica_badge_background"
            android:padding="4dp"
            android:layout_marginBottom="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚡"
                android:textSize="10sp"
                android:layout_marginEnd="2dp" />

            <TextView
                android:id="@+id/replicaCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Replication Status -->
        <TextView
            android:id="@+id/replicationStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Synced"
            android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
            android:textColor="?android:attr/textColorSecondary" />

    </LinearLayout>

    <!-- Action Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/fileActionButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:text="⋮"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_marginStart="8dp"
        android:textSize="16sp" />

</LinearLayout>
